# MacTech Governance Platform - Backend Environment
# Copy to .env and configure

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/mactech_governance

# JWT (dev - replace with Auth0/Cognito in production)
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_ISSUER=mactech-governance

# Optional: AWS S3 (for document storage)
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_REGION=us-east-1
# S3_BUCKET=mactech-governance-docs

# OpenAI (for AI chat, embeddings, RAG)
# Add OPENAI_API_KEY in Railway â†’ Variables. Never put keys in code.
# OPENAI_API_KEY=
# OPENAI_MODEL=
# OPENAI_ORG_ID=
# OPENAI_PROJECT_ID=
# AI_FEATURES_ENABLED=

# Strict mode: clauses must have risk classification before use in Pre-Bid workflow
# GOVERNANCE_STRICT_MODE=true

# Cryptographic approvals (Ed25519)
# GOV_ED25519_PRIVATE_KEY=PEM or base64 PKCS#8 private key
# GOV_ED25519_PUBLIC_KEY_ID=gov-1

# QMS Integration (clause assessment form records)
# QMS_BASE_URL=https://qms.yourdomain.com
# QMS_INTEGRATION_KEY=your-qms-integration-key
# QMS_TEMPLATE_CODE_FOR_CLAUSE_ASSESSMENT=MAC-FRM-013

# Railway only: set to true to run regulatory ingestion on next deploy, then disable
# RUN_REG_INGEST=true
